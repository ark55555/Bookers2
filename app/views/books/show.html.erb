<div class="container">
    <div class="row">
        <%= render 'users/list', user: @user, book: @book_new %>
        <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
            <table class="table">
                <tbody>
                    <tr>
                        <td>
                            <%= link_to user_path(@book.user) do %>
                            <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %><br>
                            <%= @book.user.name %>
                            <% end %>
                        </td>
                        <td><%= link_to @book.title, book_path(@book.id) %></td>
                        <td><%= @book.body %></td>
                         <td id="like-btn-<%= @book.id %>"><%= render "likes/like-btn", book: @book %></td>

                        <td>
                            <% if @user.id == current_user.id %>
                                <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %>
                            <% end %>
                        </td>
                        <td>
                            <% if @user.id == current_user.id %>
                                <%= link_to "Destroy", @book, method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %>
                            <% end %>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div id="comments-area"><%= render 'book_comments/book-comment', book: @book, book_comment: @book_comment %></div>
            <%= render 'book_comments/comment-form', book: @book, book_comment: @book_comment %>
        </div>
    </div>
</div>